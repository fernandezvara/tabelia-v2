<% content_for :main do %>
  <p><%= t('mail.common.hi', :receiver_name => @receiver.name) %></p>
  <p><%= t('mail.your_art_has_been_published.text', :art_name => @art.name)%></p>
  <table width="100%" border="0">
    <tr>
      <td style="padding:20px; width: 473px; border:1px solid #ddd; background-color: #f0f0f0; color:#7d7d7d; font-size:12px; line-height:18px;">
        <table width="100%" border="0">
          <tr>
            <td style ="width: 75px; border:0">
              <% if @art.photo == false %>
              <%= link_to image_tag(@art.image.url(:thumb).to_s, :alt => @art.name), art_profile_url(:slug => @art.slug) %>
              <% else %>
              <%= link_to image_tag(@art.image.url(:thumb).to_s, :alt => @art.name), photo_profile_url(:slug => @art.slug) %>
              <% end %>
            </td>
            <td>
              <% if @art.photo == false %>
              <p><%= link_to @art.name, art_profile_url(:slug => @art.slug) %></p>
              <% else %>
              <p><%= link_to @art.name, photo_profile_url(:slug => @art.slug) %></p>
              <% end %>
              <p><%= @art.description %></p>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
    
<% end %>


<% content_for :footer do %>
  <p><%= t('mail.legal.this_message_was_sended_to', :receiver_email => @receiver.email) %></p>
  <p><%= t('mail.legal.you_can_change_your_prefs') %><%= link_to t('mail.legal.prefs_page'), profile_privacy_url, :style => 'color:#c20000; text-decoration:none' %>.</p>
<% end %>