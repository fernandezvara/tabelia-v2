<% content_for :main do %>
  <p><%= t('mail.common.hi', :receiver_name => @receiver.name) %></p>
  <p><%= link_to(@originator.name, user_profile_url(:username => @originator.username), :style => 'color:#c20000; text-decoration:none') %><%= t('mail.comment_on_profile.main_action') %></p>
<% end %>


<% content_for :footer do %>
  <p><%= t('mail.legal.this_message_was_sended_to', :receiver_email => @receiver.email) %></p>
  <p><%= t('mail.legal.you_can_change_your_prefs') %><%= link_to @receiver.name, user_profile_url(:username => @receiver.username), :style => 'color:#c20000; text-decoration:none' %>.</p>
<% end %>