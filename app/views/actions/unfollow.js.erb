<% if @result == "true" %>
	$("div#follow_status").html("<%= escape_javascript(link_to(t('common.follow'), action_follow_path(:username => @remote_user.username), :remote => true, :class => ['abutton', 'follow'], :walk => 'no')) %>");
	$("div#follow_info").html("<%= escape_javascript(render :partial => 'partials/user/profile/followinfo', :locals => { :user => @remote_user}) %>")
	flashBar("You stopped following <%= @remote_user.name %>,", "notice", {});
<% else %>
	alert("Error inesperado.");
<% end %>