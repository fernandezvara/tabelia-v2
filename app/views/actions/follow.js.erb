<% if @result == "true" %>
	$("div#follow_status").html("<%= escape_javascript(link_to(t('common.you_follow'), action_unfollow_path(:username => @user.username), :remote => true, :class=> ['abutton', 'unfollow'], :walk => 'no')) %>");
	$("div#follow_info").html("<%= escape_javascript(render :partial => 'partials/user/profile/followinfo', :locals => { :user => @user}) %>")
	flashBar("You begin following <%= @user.name %>,", "notice", {});
<% else %>
	alert("<%= @result %>");
<% end %> 
