<% if @result == "true" %>
	$("div#follow_status").html("<%= escape_javascript(link_to('Unfollow', action_unfollow_path(:username => @remote_user.username), :remote => true, :class=> 'abutton')) %>");
	$("div#follow_info").html("<%= escape_javascript(render :partial => 'partials/user/profile/followinfo', :locals => { :user => @remote_user}) %>")
	flashBar("You begin following <%= @remote_user.name %>,", "notice", {});
<% else %>
	alert("Error inesperado.");
<% end %> 
