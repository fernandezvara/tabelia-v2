  <% case I18n.locale.to_s %>
  <% when 'en' %>
    <img src="http://assets.tabelia.com/assets/welcome/slide_01_en.jpg" alt="" />
    <img src="http://assets.tabelia.com/assets/welcome/slide_02_en.jpg" alt="" />
  <% when 'es' %>
    <img src="http://assets.tabelia.com/assets/welcome/slide_01_es.jpg" alt="" />
    <img src="http://assets.tabelia.com/assets/welcome/slide_02_es.jpg" alt="" />
  <% end %>
</div>




<div class="content center" style="height:332px;">
<div  id="last_show"></div>
  <%= render :partial => 'pages/javascript' %>
<% end %>
</div>

<% content_for :right do %>
<div class="special-right left">
  <div class="frontpage">
    <h2 class="logo"><%= t('common.tabeliah2')%></h2>
    <br />
