<% 
  art = item.art
  artist_price = art.price
  tabelia_price = art.get_price(item.height, item.width, item.media_id, item.frame)
  total_price = artist_price + tabelia_price
%>

<li class="<%= cycle('odd', 'even') %>">
  <div class="left item_shot">
    <%= image_tag art.image.url(:cart).to_s, :alt => art.name, :title => art.name %>
  </div>
  <div class="right item_info">
    <p class="s16"><%= link_to art.name, art_profile_path(:slug => art.slug) %></p>
    <p class="s14"><%= link_to art.user.name, user_profile_path(:username => art.user.username) %></p>
    <br />
    <table cellspacing="0" cellpadding="0">
      <thead>
        <tr>
          <th colspan="2">
            <p class="s14">DETAILS</p>
          </th>
          <th colspan="2">
            <p></p>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Height:</td>
          <td><%= item.height %>cm</td>
          <td>Artist:</td>
          <td><%= number_to_currency(artist_price, :unit => '€') %></td>
        </tr>
        <tr>
          <td>Width:</td>
          <td><%= item.width %>cm</td>
          <td>Tabelia:</td>
          <td><%= number_to_currency(tabelia_price, :unit => '€') %></td>
        </tr>
        <tr>
          <td>Media:</td>
          <td>value / option</td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>Framed:</td>
          <td></td>
          <td>Total:</td>
          <td><%= number_to_currency(total_price, :unit => '€') %></td>
        </tr>
      </tbody>
    </table>
  </div>
</li>