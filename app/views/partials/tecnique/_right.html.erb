<div class="box green">
  <div class="title"><%= t('search.filters') %></div>
  <div class="content">
    <p><%= t('search.subjects')%></p><br />
    <%= select_tag "subject", options_from_collection_for_select(@subjects, "slug", "name"), :prompt => t('search.subjects_prompt') %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('select#subject').change(function() {
  	$.ajax({
      url: '/tecnique/<%= @tecnique.slug %>',
      data: {
        'utf8'  : '%E2%9C%93',
        'subject': $("select#subject").val()
      },
      dataType: 'script'
    });
  });
});
</script>