<header id="branding" class="full" style="position:fixed; z-index:95;">
  <div class="header-login">
    <div class="align-left logo"><%= link_to image_tag("logo.png"), root_path %></div>
    <div class="align-left search">
      <%= form_tag search_path, :method => :get, :id => 'searchf' do %>
      <span class="search-bg"><input type="text" name="search" id="search" value="<%= params[:search] if params[:search].present? %>" /></span>
      <% end %>
    </div>
      
    <div class="in align-right">
<%= render :partial => '/partials/common/mainmenu' %>
    </div>
  </div>
</header>