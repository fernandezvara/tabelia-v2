<header id="branding" class="full">
  <div class="header-login full">
    <div class="align-left logo"><%= link_to image_tag("logo.png"), root_path %></div>
    <div class="in align-right">
      <% if current_user.nil? %>
          <a href="/login" rel="modal">log in</a><a href="/signup" rel="modal">sign up</a>
      <% else %>
          <%= link_to 'Admin', '/admin' if current_user.is_admin? %>
          <%= link_to current_user.name, user_path(current_user.slug) %>
          <%= link_to 'sign out', log_out_path %>
      <% end %>
    </div>
  </div>
	<div class="width3" style="float:right">
    <%= render :partial => '/partials/common/mainmenu' %>
  </div>
</header>