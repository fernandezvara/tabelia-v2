<div id="topmenu">
  <div class="homemenu">
    <ul id="mainmenu" class="menu">
      <li><%= link_to image_tag("icons/home-1.png", :alt => t('mainmenu.home')), root_path, :alt => t('mainmenu.home'), :class => 'img' %></li>
      <% if current_user %>
      <li><%= link_to image_tag("icons/messages.png", :alt => t('mainmenu.home')), inbox_path, :alt => t('mainmenu.home'), :class => 'img' %><span class="message_count">
      <% if current_user %>
        <%= current_user.unreaded_conversations if current_user.unreaded_conversations > 0 %>
        <% end %>
        </span></li>
      <% end %>
      <% if current_user.nil? %>
      <li><%= link_to t('mainmenu.login'), '/login', :rel => 'modal nofollow' %></li>
      <li><%= link_to t('mainmenu.signup'), '/signup', :rel => 'nofollow' %></li>
      <% else %>
      <li><%= link_to current_user.name, user_profile_path(current_user.username) %></li>
      <li><%= link_to t('mainmenu.signout'), logout_path %></li>
      <% end %>
    </ul>
    <div class="clear"></div>
  </div>
</div>
<div style="clear:right"></div>
<div id="topmenu">
  <div class="homemenu">
    <ul id="mainmenu" class="menu">
      <li><a href="" onclick="return false;" class="no"><%= t('mainmenu.photos')%></a></li>
