        <ul class="sub-menu">
          <% @subjects.each do |subject| %>
            <li><%= link_to subject.name, shop_photos_path(:subject => subject.slug, :tecnique => '_') %></li>
          <% end %>
        </ul>
      </li>
      <li><%= link_to t('mainmenu.tecniques'), "", :onclick => 'return false;' %>
        <ul class="sub-menu">
          <% @tecniques.each do |tecnique| %>
            <li><%= link_to tecnique.name, shop_photos_path(:subject => '_', :tecnique => tecnique.slug) %></li>
          <% end %>
        </ul>
      </li>
      <li><a href="" onclick="return false;" class="no"><%= t('mainmenu.paintings')%></a></li>
      <li><%= link_to t('mainmenu.genres'), "", :onclick => 'return false;' %>
        <ul class="sub-menu">
          <% @idioms.each do |idiom| %>
            <li><%= link_to idiom.name, shop_paintings_path(:category => '_', :tecnique => '_', :idiom => idiom.slug) %></li>
          <% end %>
        </ul>
      </li>
      <li><%= link_to t('mainmenu.categories'), "", :onclick => 'return false;' %>
        <ul class="sub-menu">
          <% @categories.each do |category| %>
            <li><%= link_to category.name, shop_paintings_path(:category => category.slug, :tecnique => '_', :idiom => '_') %></li>
          <% end %>
        </ul>
      </li>
      <li><a href="/cart"><%= t('mainmenu.cart') %> <% if current_cart.items.count > 0 %>
