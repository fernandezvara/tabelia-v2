<li class="<%= cycle('odd', 'even') %>">
  <div class="user left">
    <div class="avatar left">
      <%= link_to image_tag(user.avatar.url(:thumb).to_s, :alt => user.name), user_profile_path(:username => user.username), :remote => true %>
    </div>      
    <div class="data right">
      <p><%= link_to user.name, user_profile_path(:username => user.username), :remote => true %></p>
      <p><%= link_to "has #{GraphClient.get_count('Backward', 'Follow', user)} followers", user_followers_path(:username => user.username), :remote => true %></p>
    </div>
  </div>
  <div class="art align-right">
    <%= user.arts.count %>
  </div>
  <div class="clear"></div>
</li>
