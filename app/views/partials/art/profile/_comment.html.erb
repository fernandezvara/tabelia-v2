<li>
  <div class="actor">
    <%= link_to image_tag(comment.user.avatar.url(:mini).to_s, :alt => comment.user.name) %>
  </div>
  <div class="text s12">
      <% link = link_to comment.user.name, user_profile_path(:username => comment.user.username) %>
      <%= simple_format("<strong>#{link}</strong>: " + comment.text) %>
      <%= timeagoright(comment.created_at) %>
  </div>
</li>