<div class="column unitx5 left first">
  <h2><%= @art.name %></h2>
</div>
<div class="column unitx1" id="like_status">
  <% if current_user %>
  <% if current_user != @art.user %>
    <% if GraphClient.connected?('Forward', 'Like', current_user, @art) == false %>
      <%= link_to 'Like', action_like_path(:slug => @art.slug), :remote => true, :class => ['abutton', 'like'], :walk => 'no' %>
    <% else %>
      <%= link_to 'You like it', action_unlike_path(:slug => @art.slug), :remote => true, :class => ['abutton', 'unlike'], :walk => 'no' %>
    <% end %>
  <% end %>
  
  <% end %>
</div>
<div class="column unitx2" id="add_to_cart">
  <%= link_to "Buy now (from " + number_to_currency(@art.price + @art.get_price(@art.min_height, @art.min_width, 1, 0), :unit => 'â‚¬') + ")", add_to_cart_path(:slug => @art.slug), :class => 'abutton', :rel => 'modal' %>
</div>