<div class="box green">
  <div class="title"><%= t('arts.profile.similar_art') %></div>
  <div class="content">
    <% @similar_art.each do |art| %>
    <div class="image_thumb">
      <%= link_to image_tag(art.image.url(:thumb).to_s, :alt => art.name), photo_profile_path(:slug => art.slug) %>
    </div>
    <% end %>
  </div>
</div>