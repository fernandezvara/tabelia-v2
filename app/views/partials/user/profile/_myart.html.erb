<% if @arts.count > 0 %>
<div class="box purple">
  <div class="title">MY ART<%= link_to 'see all...', user_arts_path(:username => @user.username), :remote => true %></div>
  <div class="content">
    <% @arts.each do |art| %>
      <div class="image_thumb">
        <%= link_to image_tag(art.image.url(:thumb).to_s, :alt => art.name), art_profile_path(:slug => art.slug), :remote => true %>
      </div>
    <% end %>
  </div>
</div>
<% end %>