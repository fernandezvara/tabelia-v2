<% if @arts.count > 0 %>
<div class="box common">
  <div class="title"><%= t('users_profile.my_art') %><%= link_to t('common.see_all_female'), user_arts_path(:username => @user.username) if @arts.count > 8 %></div>
  <div class="content">
    <% if @arts.count > 8 
      count = 8
    else
      count = @arts.count
    end
      %>
    
    <% 0.upto(count - 1) do |c| %>
      <div class="image_thumb">
        <%= link_to image_tag(@arts[c].image.url(:thumb).to_s, :alt => @arts[c].name, :title => @arts[c].name, :class => 'tip'), art_profile_path(:slug => @arts[c].slug) %>
      </div>
    <% end %>
  </div>
</div>
<% end %>