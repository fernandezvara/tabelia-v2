<div class="box purple">
  <div class="title">MY ART<%= link_to 'see all...', user_arts_path(:username => @user.username) %></div>
  <div class="content">
    <% @user.arts.each do |art| %>
      <div class="image_thumb">
        <%= link_to image_tag(art.image.url(:thumb).to_s, :alt => art.name), art_profile_path(:slug => art.slug) %>
      </div>
    <% end %>
  </div>
</div>