<div class="box blue">
  <div class="title">comments</div>
  <div class="content">
    <%= render :partial => 'partials/user/profile/newcomment' %>
    <ul class="comments">
      <% @user.comments_received.order_by(:created_at, :desc).each do |comment| %>
        <%= render :partial => 'partials/user/profile/comment', :locals => { :comment => comment } %>
      <% end %>
    </ul>
  </div>
</div>