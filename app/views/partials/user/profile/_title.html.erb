<div class="unitx5 left">
  <h2><%= @user.name %></h2>
</div>
<div class="unitx1 right" id="follow_status">
  <% if current_user != @user %>
    <% if GraphClient.connected?('Forward', 'Follow', current_user, @user) == false %>
      <%= link_to 'Follow', action_follow_path(:username => @user.username), :remote => true, :class => 'abutton', :walk => 'no' %>
    <% else %>
      <%= link_to 'Unfollow', action_unfollow_path(:username => @user.username), :remote => true, :class => 'abutton', :walk => 'no' %>
    <% end %>
  <% end %>
</div>