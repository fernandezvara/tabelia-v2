<form><input type="text" id="color" name="color" value="#<%= @color %>" /></form>
<div id="colorpicker" style="height:200px;"></div>
<div style="text-align: center; overflow:hidden;">
  <a href="" class="abutton" id="colorsearch" data-remote="true">Search</a>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('#colorpicker').farbtastic('#color');
    $("a#colorsearch").live("click", function(e) {
      var color = $("input#color").val().replace("#", "");
      $.ajax({
           url: '/color/' + color,
           dataType: "script"
       });
    })
  });
</script>