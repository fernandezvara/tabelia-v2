<li class="<%= cycle('odd', 'even') %>">
    <div class="avatar left">
      <%= link_to image_tag(event.image1.url(:thumb).to_s, :alt => event.title), event_path(:id => event.slug) %>
    </div>      
    <div class="data">
      <p><%= link_to event.eventcategory.name, agenda_path(:category =>  event.eventcategory.slug) %>: <%= link_to event.title, event_path(:id => event.slug) %></p>
      <p>Comienzo: <%= l(event.start)%> · Finalización: <%= l(event.finish) %>
    </div>
  <% comments_count = event.comments.count %>
  <div class="box">
    <div class="n">
      <p class="s28 center"><%= comments_count %></p>
      <% if comments_count == 1 %>
      <p class="center"><%= t('arts.singular') %></p>
      <% else %>
      <p class="center"><%= t('arts.plural') %></p>
      <% end %>
    </div>
  </div>
  <div class="clear"></div>
</li>