<% begin
if item.readed == true 
  read_status = "readed"
else 
  read_status = "unreaded"
end 
last_message = item.conversation.last_message
@other_user = item.conversation.other_participants_than(current_user)[0]
%>
<li class="message <%= "#{read_status}" %>" id="<%= item.conversation.slug.to_s %>">
  <div class="avatar">
    <%= image_tag(@other_user.avatar.url(:mini).to_s, :alt => @other_user.name) %>
  </div>
  <div class="data">
    <p><strong><%= link_to item.conversation.subject  , message_view_path(:slug => item.conversation.slug.to_s), :remote => true %></strong></p>
    <p>Ãšltimo mensaje enviado por <%= link_to last_message.sender.name, user_profile_path(:username => last_message.sender.username) %> hace <%= time_ago_in_words(last_message.created_at) %>.</p>
  </div>
  <div class="actions">
    <%= link_to 'Ver', message_view_path(:slug => item.conversation.slug.to_s), :remote => true, :class=> 'abutton' %>
     <a href="#" class="abutton">Borrar</a>
  </div>
</li>
