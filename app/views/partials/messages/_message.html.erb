<% 
if conversation.readed == true 
  read_status = "readed"
else 
  read_status = "unreaded"
end 
bucket = conversation.bucket
conversation.bucket.conversations.each do |b|
  puts b.user.name
  if b.user != current_user
    @other_user = b.user
  end
end
last_message = Message.order_by(:created_at, :asc).where(:bucket_id => bucket.id.to_s).last
#last_message = bucket.messages.ordered_by(:created_at, :asc).last
%>
<li class="message <%= "#{read_status}" %>" id="<%= conversation.bucket.slug.to_s %>">
  <div class="avatar">
    <%= image_tag(@other_user.avatar.url(:mini).to_s, :alt => @other_user.name) %>
  </div>
  <div class="data">
    <p><strong><%= link_to bucket.subject, message_view_path(:slug => bucket.slug.to_s), :remote => true %></strong></p>
    <% if last_message.sender == current_user 
          @sender_name = "tí"
        else
          @sender_name = last_message.sender.name
        end %>
    <p>Último mensaje enviado por <%= link_to @sender_name, user_profile_path(:username => last_message.sender.username) %> hace <%= time_ago_in_words(last_message.created_at) %>.</p>
  </div>
  <div class="actions">
    <%= link_to 'Ver', message_view_path(:slug => bucket.slug.to_s), :remote => true, :class=> 'abutton' %>
     <a href="#" class="abutton">Borrar</a>
  </div>
</li>
