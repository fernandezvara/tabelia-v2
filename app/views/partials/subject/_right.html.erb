<div class="box green">
  <div class="title"><%= t('search.filters') %></div>
  <div class="content">
    <p><%= t('search.tecniques')%></p><br />
    <%= select_tag "tecnique", options_from_collection_for_select(@tecniques, "slug", "name"), :prompt => t('search.tecniques_prompt') %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('select#tecnique').change(function() {
  	$.ajax({
      url: '/subject/<%= @subject.slug %>',
      data: {
        'utf8'  : '%E2%9C%93',
        'tecnique': $("select#tecnique").val()
      },
      dataType: 'script'
    });
  });
});
</script>