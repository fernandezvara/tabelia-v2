$("section#main-title").html('<%= escape_javascript(render :partial => "partials/color/index/title") %>');
$("section#main-left").html('<%= escape_javascript(render :partial => "partials/color/index/left") %>').slideDown();
$('img.cap').captify({
	speedOver: 'fast',
	speedOut: 'normal',
	hideDelay: 500,	
	// 'fade', 'slide', 'always-on'
	animation: 'slide',		
	// text/html to be placed at the beginning of every caption
	prefix: '',		
	// opacity of the caption on mouse over
	opacity: '0.5',					
	// the name of the CSS class to apply to the caption box
	className: 'caption-bottom',	
	// position of the caption (top or bottom)
	position: 'top',
	// caption span % of the image
	spanWidth: '100%'
});
